class Solution {
    public int findCenter(int[][] edges) {
        if (edges[0][1] == edges[1][0] || edges[0][1] == edges[1][1]) {
            return edges[0][1];  // the center vertex will either be 0th index or 1st index of the neighbour vertex 
        } else {
            return edges[0][0]; // only the center vertex will appear more than once rest all will be once.
        }
    }
}
